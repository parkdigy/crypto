{
  "name": "@pdg/crypto",
  "title": "Typescript Crypto Module",
  "description": "Typescript Crypto Module",
  "version": "1.0.5",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parkdigy/crypto.git",
    "baseUrl": "https://github.com/parkdigy/crypto"
  },
  "bugs": {
    "url": "https://github.com/parkdigy/crypto/issues"
  },
  "homepage": "https://github.com/parkdigy/crypto#readme",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "cd examples && npm run dev",
    "watchman:del": "watchman watch-del \"${PWD}\" ; watchman watch-project \"${PWD}\"",
    "build": "npm run watchman:del && npm run test && rollup -c --bundleConfigAsCjs",
    "git:commit": "node .git-commit.cjs",
    "git:push": "git push",
    "git:commit:push": "npm run git:commit && npm run git:push",
    "git:merge:mirror": "node .git-merge.cjs mirror main",
    "reset:gitignore": "git rm -r --cached . && git add .",
    "pub": "npm i && npm run build && npm publish --access=public && [ -f ./.git/hooks/pre-commit ] && rm ./.git/hooks/pre-commit || true",
    "lint": "eslint './src/**/*.ts'",
    "tsc": "tsc --noEmit",
    "reinstall": "npm run reinstall:module",
    "reinstall:module": "rm -rf node_modules && rm -f package-lock.json && npm i",
    "test": "jest"
  },
  "author": "YOUNG CHUL PARK",
  "license": "MIT",
  "readmeFilename": "README.md",
  "keywords": [
    "util",
    "typescript",
    "javascript"
  ],
  "dependencies": {
    "base-64": "^1.0.0",
    "md5": "^2.3.0",
    "sha.js": "^2.4.12",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-eslint": "^9.2.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@types/base-64": "^1.0.2",
    "@types/jest": "29.5.14",
    "@types/md5": "2.3.6",
    "@types/node": "22.19.2",
    "@types/sha.js": "2.4.4",
    "@types/utf8": "3.0.3",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/parser": "8.49.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "29.7.0",
    "prettier": "3.7.4",
    "rollup": "4.53.3",
    "rollup-plugin-delete": "2.2.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-typescript2": "0.36.0",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0"
  }
}
